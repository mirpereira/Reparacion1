<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.myaplicacion.hp.repair_pc.Consulta">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:background="@drawable/image2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pantalla azul"
        android:id="@+id/radioButton5"
        android:checked="false"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="30dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No enciende"
        android:id="@+id/radioButton6"
        android:checked="false"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_below="@+id/radioButton5"
        android:layout_alignRight="@+id/radioButton5"
        android:layout_alignEnd="@+id/radioButton5"
        android:layout_marginTop="58dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se apaga"
        android:id="@+id/radioButton7"
        android:checked="false"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_below="@+id/radioButton6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitidos"
        android:id="@+id/radioButton8"
        android:checked="false"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_below="@+id/radioButton7"
        android:layout_alignLeft="@+id/radioButton6"
        android:layout_alignStart="@+id/radioButton6"
        android:layout_marginTop="56dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se reinicia"
        android:id="@+id/radioButton9"
        android:checked="false"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_below="@+id/radioButton8"
        android:layout_alignLeft="@+id/radioButton8"
        android:layout_alignStart="@+id/radioButton8"
        android:layout_marginTop="60dp" />
</RelativeLayout>
